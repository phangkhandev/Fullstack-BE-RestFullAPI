<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete a User</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/create">Create Users</a>

    </div>
    <div class="form-add-new">
        <form action="/delete-user/<%= userDelete.id%>" method="POST">
            <fieldset>
                <legend>Delete a user</legend>
                <div class="input-group d-none">
                    <label>Id: </label>
                    <input type="text" value="<%= userDelete.id%>" name="userId" />
                </div>

                <div class="input-group">
                    <label>Email: </label>
                    <input type="text" value="<%= userDelete.email%>" name="email" />
                </div>

                <div class="btn">
                    <button>Confirm</button>
                </div>
            </fieldset>
        </form>
    </div>
</body>

</html>